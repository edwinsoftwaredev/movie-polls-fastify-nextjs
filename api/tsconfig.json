{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    // NOTE: Added DOM lib to handle Edge functions in typescript
    "lib": ["es2021", "DOM"],
    "esModuleInterop": true,
    "baseUrl": ".",

    "emitDeclarationOnly": true,
    "composite": true
  },
  "exclude": ["middleware.ts"]
}
