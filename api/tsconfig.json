{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    // NOTE: Added DOM lib to handle Edge functions in typescript
    "lib": ["es2022", "DOM"],
    "esModuleInterop": true,
    "baseUrl": "."
  },
  "exclude": ["middleware.ts"]
}
