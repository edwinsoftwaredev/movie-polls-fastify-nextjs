{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "noEmit": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "decorators": ["src/decorators"],
      "hooks": ["src/hooks"],
      "plugins": ["src/plugins"],
      "routes": ["src/routes"],
      "services": ["src/services"]
    }
  }
}
